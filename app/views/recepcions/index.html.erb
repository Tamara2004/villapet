<h1>Listado de Recepciones</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Veterinario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recepcions.each do |recepcion| %>
      <tr>
        <td><%= recepcion.cliente.nombre %></td>
        <td><%= recepcion.veterinario.nombre %></td>
        <td><%= link_to 'Show', recepcion %></td>
        <td><%= link_to 'Edit', edit_recepcion_path(recepcion) %></td>
        <td><%= link_to 'Destroy', recepcion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

